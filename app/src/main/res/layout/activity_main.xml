<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="User Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvUserSubLabel" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvUserSub"
            app:layout_constraintTop_toTopOf="@+id/txvUserSubLabel"
            app:layout_constraintStart_toEndOf="@+id/txvUserSubLabel"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvEmailLabel" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txvUserSubLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvEmail" app:layout_constraintStart_toEndOf="@+id/txvEmailLabel"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/txvEmailLabel"/>
</android.support.constraint.ConstraintLayout>